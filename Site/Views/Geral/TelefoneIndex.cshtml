        <script src="@Url.Content("~/Scripts/Tela/Geral/Extensao.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/Tela/Geral/Componente.js")" type="text/javascript"></script>*@


    <script src="@Url.Content("~/Scripts/Tela/Geral/Telas/Telefone.js")" type="text/javascript"></script>

    <script>
        root = "http://@HttpContext.Current.Request.Url.Authority" ;
        var model = @Html.Raw(Json.Encode(Model));

    </script>

}


