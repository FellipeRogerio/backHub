@{
    ViewBag.Title = (Model.IdLinha > 0 ? "Alterar" : "Cadastrar") + " - Contato";

    Layout = "";
    <link rel="stylesheet" type="text/css" href="~/Content/Fontes/feather/css/feather.css">


    @Styles.Render("~/Content/css");
    @Styles.Render("~/Content/temaBaseCSS");




}
<input type="hidden" class="hidden" name="inpContatoIdLinha" id="txtContatoIdLinha" value="@Model.IdLinha">
<input type="hidden" class="hidden" name="inpContatoCodigo" id="txtContatoCodigo" value="@Model.Contato.Id">
<input type="hidden" class="hidden" name="inpContatoTipoCad" id="txtContatoTipoOrigem" value="@Model.ControllerOrigem">
<input type="hidden" class="hidden" name="inpContatoIdCad" id="txtContatoIdOrigem" value="@Model.IdOrigem">
<div id="tModTel" class="modal modal-container bs-modal-sm" style="display: none;"></div>


<div id="idPrincipal" class="main-panel " style=" height:100%;overflow-y:auto">

    <div class="content-wrapper pl-1 pr-1" style=" height:100%; padding-left:10px!important; padding-right:15px!important">
        <div class="basic-elements">
            <form class="form mb-0" name="formContato" id="formContato" method="post">

                <div class="row justify-content-center">
                    <div class="col-sm-12">
                        <div class="card mb-0 mt-0">

                            <div class="form-body">
                                <h4 class="form-section"><i class="fas fa-users"></i> @ViewBag.Title</h4>
                                <div class="row justify-content-end">

                                    <!-- #region STATUS -->
                                    <div class="col-auto">
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input" id="chkContatoAtivo" name="chkContatoAtivo">
                                            <label class="custom-control-label" for="chkContatoAtivo">
                                                Ativo
                                            </label>
                                        </div>
                                    </div>
                                    <!-- #endregion -->
                                </div>
                                <div class="row">
                                    <!-- #region Nome -->
                                    <div class="col-sm-6">
                                        <div class="form-group mb-2">
                                            <label for="txtContatoNome">Nome</label>
                                            <div class="controls mb-1 position-relative has-icon-left ">

                                                <input id="txtContatoNome" name="txtContatoNome" minlength="2" maxlength="250" type="text" placeholder="" class="form-control" required>
                                                <div class="form-control-position ">
                                                    <i class="fas fa-hotel"></i>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <!-- #endregion -->
                                    <!-- #region Departamento -->
                                    <div class="col-sm-6">
                                        <div class="form-group mb-2">
                                            <label for="txtContatoDepartamento">Departamento</label>
                                            <div class="controls mb-1 position-relative has-icon-left ">

                                                <input id="txtContatoDepartamento" name="txtContatoDepartamento"  maxlength="250" type="text"  class="form-control">
                                                <div class="form-control-position ">
                                                    <i class="fas fa-hotel"></i>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <!-- #endregion -->
                                </div>
                                <div class="row">
                                    <!-- #region Email -->
                                    <div class="col-sm-12">
                                        <div class="form-group mb-2">
                                            <label for="txtContatoEmail">Email</label>
                                            <div class="controls mb-1 position-relative has-icon-left ">

                                                <input id="txtContatoEmail" name="txtContatoEmail" type="email" class="form-control">
                                                <div class="form-control-position ">
                                                    <i class="fas fa-hotel"></i>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <!-- #endregion -->
                                </div>

                                <!---Botao-->

                            </div>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-sm-12">
                        <div class="card mb-1">

                            <div class="form-body">

                                <div class="row">
                                    <!-- #region Observação -->
                                    <div class="col-sm-12">
                                        <div class="form-group mb-2">
                                            <label for="txtContatoObs">Observação</label>
                                            <div class="controls mb-1 position-relative has-icon-left ">
                                                <textarea class="form-control" id="txtContatoObs" name="txtContatoObs" rows="3"></textarea>
                                                <div class="form-control-position ">
                                                    <i class="fas fa-hotel"></i>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <!-- #endregion -->
                                </div>

                                <!---Botao-->

                            </div>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-sm-12">
                        <div class="card mb-1">

                            <div class="form-body">

                                <div class="row">
                                    <!-- #region Telefones -->
                                    <div class="col-md-12">
                                        <!--Btn add Modal-->
                                        <button type="button" id="cmdAddTelefone" class="btnModal btn btn-raised btn-outline-info mr-1">
                                            <span class="ft-plus"></span>
                                        </button>
                                    </div>
                                    <div class="col-sm-12">
                                        <table id="tbTelefones" class="table table-bordered"></table>


                                    </div>
                                    <!-- #endregion -->
                                </div>

                                <!---Botao-->

                            </div>
                        </div>
                    </div>
                </div>
            </form>

            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="card mb-1">
                        <div class="card-content">
                            <div class="card-body pt-2 pb-2">
                                <div class="form-body">
                                    <div class="row" style=" float:right">
                                        <div class="col-sm-12">
                                            <button id="cmdSalvarContato" type="button" class="btn btn-raised btn-outline-success mb-1">
                                                <span class="ft-save" style="font-size:1.8em;"></span>
                                            </button>
                                            <button id="btnSairContato" type="button" class="btn btn-raised btn-outline-danger mb-1">
                                                <span class="fa fa-sign-out-alt" style="font-size:1.8em;"></span>
                                            </button>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>


