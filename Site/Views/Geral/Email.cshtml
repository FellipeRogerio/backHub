    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>*@
<!-- ================================================================== FONTES =================================================================  -->
<!-- ================================================================== CSS ====================================================================  -->
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap/bootstrap.css")">

<link href="@Url.Content("~/Content/Componentes/alertas/sweetalert2.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Componentes/Dropzone/dropzone.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Componentes/Email/style.css")" rel="stylesheet" />

<!-- Theme included stylesheets -->
