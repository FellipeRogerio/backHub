@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/Utils")
@Scripts.Render("~/bundles/bootstrap")
<script src="@Url.Content("~/Scripts/Tela/Geral/Utilitario.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Componentes/alertas/sweetalert2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Componentes/Dropzone/dropzone.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Componentes/Validation/jqBootstrapValidation.js")" type="text/javascript" charset="utf-8"></script>
<script src="@Url.Content("~/Scripts/Tela/Geral/Telas/email.js")" type="text/javascript" charset="utf-8"></script>

<!-- Main Quill library -->
<script src="//cdn.quilljs.com/1.3.6/quill.core.js"></script>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
@*<script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>*@
<!-- ================================================================== JS =====================================================================  -->


<title>@ViewBag.Title</title>

<body>

    <!-- Core build with no theme, formatting, non-essential modules -->
    <div class="wrapper">
        <div class="main-panel">
            <div>
                <div class="content-wrapper mt-2">

                    <div class="row justify-content-center">
                        <form class="form mb-0" name="formEmail" id="formEmail" method="post" accept-charset="UTF-8">


                            <div class="col-md-12">
                                <div class="card mt-0 mb-1">
                                    <div class="card-content">
                                        <div class="card-body pt-2 pb-2">
                                            <div class="row justify-content-start">

                                                <div class="col-md-12">
                                                    <div class="row">
                                                        <div class="col-md-1">
                                                            <label for="txtPara">Para</label>
                                                        </div>
                                                        <div class="col-md-11">
                                                            <div class="form-group mb-2">
                                                                <div class="controls mb-1 position-relative has-icon-left ">

                                                                    <input id="txtPara" name="txtPara" type="text"
                                                                           data-validation-callback-callback="ValidarEmail"
                                                                           placeholder="" class="form-control"
                                                                           value="@(Model?.Email?.Para)"
                                                                           required>
                                                                    @*<div class="form-control-position ">
                                                                            <i class="fas fa-hotel"></i>
                                                                        </div>*@

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-1">
                                                            <label for="txtCC">CC</label>
                                                        </div>
                                                        <div class="col-md-11">
                                                            <div class="form-group mb-2">

                                                                <div class="controls mb-1 position-relative has-icon-left ">

                                                                    <input id="txtCC" name="txtCC" type="text" placeholder="" class="form-control"
                                                                           value="@(Model?.Email?.CC)"
                                                                           data-validation-callback-callback="ValidarEmail">


                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-1">
                                                            <label for="txtAssunto">Assunto</label>
                                                        </div>
                                                        <div class="col-md-11">
                                                            <div class="form-group mb-2">

                                                                <div class="controls mb-1 position-relative has-icon-left ">

                                                                    <input id="txtAssunto" name="txtAssunto" type="text"
                                                                           value="@(Model?.Email?.Assunto)"
                                                                           placeholder="" class="form-control" required>


                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-1">
                                                            <label>Anexos</label>
                                                        </div>
                                                        <div class="col-md-11">

                                                            <!-- #region LOGO  -->
                                                            <div action="/Upload" class="dropzone"
                                                                 id="tAnexos"
                                                                 style="min-height:106px; margin-bottom:15px;">
                                                                <div class="fallback">
                                                                    <input name="anexos" type="file" />
                                                                </div>
                                                            </div>
                                                            <!-- #endregion -->
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-1">
                                                            <label>Email</label>
                                                        </div>
                                                        <div class="col-md-11">
                                                            <div id="toolbar">
                                                            </div>
                                                            <div id="editor" style="min-height:200px">

                                                                <span></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

                <div class="content-wrapper mt-2">

                    <div class="row justify-content-end">


                        <div class="col-md-2">
                            <div class="card mt-0 mb-1">
                                <div class="card-content">
                                    <div class="card-body pt-2 pb-2" style="padding-left: 0px;">
                                        <div class="row justify-content-end">
                                            <div class="col-md-12 col-sm-12" style="text-align: right;padding-left: 0px;">
                                                <button id="cmdExcluir" type="button" title="Fechar" class="btn btn-raised btn-outline-danger mb-1">
                                                    <span class="ft-x-circle" style="font-size:1.8em;"></span>
                                                </button>
                                                <button id="cmdLimpar" type="button" title="Limpar" class="btn btn-raised btn-outline-warning mb-1">
                                                    <span class="ft-minus-circle" style="font-size:1.8em;"></span>
                                                </button>
                                                <button id="cmdSalvar" type="button" title="Enviar" class="btn btn-raised btn-outline-success mb-1">
                                                    <span class="icon-paper-plane" style="font-size:1.8em;"></span>
                                                </button>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="txtAnexos" name="txtAnexos">
    <input type="hidden" id="txtBodyIni" name="txtBodyIni" value="@(Model?.Email?.CorpoEmail)">
    <input id="iniAnexos" type="file" name="iniAnexos" multiple style="display:none" />


    <script>
        //DESATIVAR A ATIVAÇÃO DO COMPONENTE AO ABRIR A TELA - NECESSÁRIO PARA SETAR A CONFIGURAÇÃO CUSTOMIZADA NO .JS DA TELA
        Dropzone.autoDiscover = false;
        let root = "http://@HttpContext.Current.Request.Url.Authority";

        $('#txtAnexos').val(JSON.stringify( @Html.Raw(Json.Encode(Model.DefaultAnexos))));



    </script>
</body>

