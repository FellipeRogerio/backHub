@using Extensions

@{
    ViewBag.Title = "NCM";
}
<input type="hidden" class="hidden" name="inpPermissao" id="txtPermissao" value="@ViewBag.UsuarioEdita">
<input type="hidden" class="hidden" name="inpCodigo" id="txtCodigo" value="@Model.Id">
<div class="main-content">
    <div class="content-wrapper">
        <!---Inicio Painel-->
        <div class="basic-elements">
            <div class="row">
                <div class="col-sm-12">
                    <div class="content-header">@ViewBag.Title</div>
                </div>
            </div>


            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card mt-0 mb-1">
                        <div class="card-content">
                            <div class="card-body pt-2 pb-2">
                                <form class="form mb-0" name="formNCM" id="formNCM" method="post" accept-charset="UTF-8">
                                    <div class="form-body">
                                        @*<h4 class="form-section"><i class="fas fa-users"></i> @ViewBag.Title</h4>*@
                                        <div class="row justify-content-end">
                                            <div class="col-auto">
                                                <div class="custom-control custom-switch">
                                                    <input type="checkbox" class="custom-control-input" id="chkAtivo" name="chkAtivo">
                                                    <label class="custom-control-label" for="chkAtivo">
                                                        Ativo
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-3">

                                                <div class="form-group mb-2">
                                                    <label for="txtCodigoProd">Código</label>
                                                    <div class="controls mb-1 position-relative has-icon-left ">

                                                        <input id="txtCodigoNCM" name="txtCodigoNCM" type="text" maxlength="50" class="form-control" required>
                                                        <div class="form-control-position ">
                                                            <i class="fa fa-boxes"></i>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-9">

                                                <div class="form-group mb-2">
                                                    <label for="txtDescricao">Descrição</label>
                                                    <div class="controls mb-1 position-relative has-icon-left ">

                                                        <input id="txtDescricao" name="txtDescricao" type="text" maxlength="150" class="form-control">
                                                        <div class="form-control-position ">
                                                            <i class="fa fa-boxes"></i>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                       
                                        <!---Botao-->
                                        <div class="row" style=" float:right">
                                            <div class="col-sm-12">
                                                <button id="cmdSalvar" type="button" class="btn btn-raised btn-outline-success mb-1">
                                                    <span class="ft-save" style="font-size:1.8em;"></span>
                                                </button>
                                                <button id="btnSair" type="button" class="btn btn-raised btn-outline-danger mb-1">
                                                    <span class="fa fa-sign-out-alt" style="font-size:1.8em;"></span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                        <!---/Pesquisar------>
                    </div>

                </div>


            </div>
        </div>
    </div>
</div>


@section css{
    @*<link href="@Url.Fingerprint("~/Content/Componentes/datatables/dataTables.bootstrap4.css")" rel="stylesheet" />*@

}

@section scripts{
    <script src="@Url.Fingerprint("~/Scripts/Componentes/Validation/jqBootstrapValidation.js")" type="text/javascript" charset="utf-8"></script>

    <script src="@Url.Fingerprint("~/Scripts/Tela/Geral/Utilitario.js")" type="text/javascript"></script>
    <script src="@Url.Fingerprint("~/Scripts/Tela/Geral/Extensao.js")" type="text/javascript"></script>
    <script src="@Url.Fingerprint("~/Scripts/Tela/Geral/Componentes.js")" type="text/javascript"></script>
    <script src="@Url.Fingerprint("~/Scripts/Tela/Cadastro/Faturamento/NCM/CadastroNCM.js")" type="text/javascript"></script>

    <script>
        //var root = "http://@HttpContext.Current.Request.Url.Authority";
        var model = @Html.Raw(Json.Encode(Model));
    </script>

}




