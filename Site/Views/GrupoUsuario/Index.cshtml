@using Extensions

@{
    ViewBag.Title = "Grupo de Usuário";
}

<input type="hidden" class="hidden" name="inpPermissao" id="txtPermissao" value="@ViewBag.UsuarioEdita">
<input type="hidden" class="hidden" name="inpCodigo" id="txtCodGroupUser" value="0">
<div class="main-content">
    <div class="content-wrapper">
        <!---Inicio Painel-->
        <div class="basic-elements">
            <div class="col-md-12">
                <div class="card mt-0 mb-1">
                    <div class="card-content">
                        <div class="card-body pt-2 pb-0">
                            <div class="row caixaTitulo" id="linhaCabecalho">
                                <div class="col-sm-auto">
                                    <div class="content-header">@ViewBag.Title</div>
                                </div>
                                <div class="caixaTituloBotao">
                                    <!--Btn add Modal-->
                                    <button type="button" id="cmdAdicionar" class="btnModal btn btn-raised btn-outline-info mr-1">
                                        <span class="ft-plus"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Inicio Conteudo ---->

                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <div class="card">
                            <!-----Inicio Lateral Esquerda Conteudo 1----------------------------------->
                            <div class="card-content">

                                <div class="card-body table-responsive divTabSistema">
                                    <!---Btn Add Modal---->
                                    <!----Inicio Tabela Conteudo 1-->
                                    <table id="tabelaDados" class="table table-striped table-bordered tbSistema" style="width:100%"></table>

                                </div> <!---- Fim Tabela Conteudo 1-->
                            </div><!----- Fim Formatação Conteudo 1 white------->
                        </div><!--- Fimm Lateral Esquerda Conteudo 1------------------------------------------------------->
                    </div><!--- Fimm Lateral Esquerda Conteudo 1------------------------------------------------------->
                    <!----------- Inicio Lateral Direita Conteudo 2------------>

                    <div class="col-md-12" id="dPermissoes">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body">

                                    <!--Pesquisar-->
                                    <div class="col-xs-5 w50 mt15 col-xs-offset-7">
                                        <div class="input-group">
                                            <input id="txtsearch" type="text" placeholder="Pesquisar" class="form-control">
                                        </div>
                                    </div>
                                    <!---/Pesquisar------>
                                    <!----Opção Tabela-->
                                    <div class="col-12 divTabSistema">
                                        <div id="divPermissoes" class="table table-bordered table-striped tbSistema" style="width:100%">
                                        </div><!----Fim Opção Tabela-->
                                    </div>
                                    <div id="divSalvar" class="wizard-pager">
                                        <!--Botao Modal ----->
                                        <div style="float: right;">
                                            <button id="cmdSalvarPermissao" type="button" class="btn btn-raised btn-outline-success mr-1">
                                                <i class="ft-save" style="font-size:1.8em;"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div><!----Fim conteudo ------>
            </div>
        </div><!---Fim Painel-->
    </div>
</div>
