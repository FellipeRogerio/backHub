@using Extensions
@{
    ViewBag.Title = "Grupo de Usuário";
}
<input type="hidden" class="hidden" name="inpPermissao" id="txtPermissao" value="@ViewBag.UsuarioEdita">
<input type="hidden" class="hidden" name="inpCodigo" id="txtCodigo" value="@Model.Id">
<div class="main-content">
    <div class="content-wrapper">
        <!---Inicio Painel-->
        <div class="basic-elements">
            <div class="card mt-0 mb-1">
                <div class="card-content">
                    <div class="card-body pt-2 pb-0">
                        <div class="row caixaTitulo" id="linhaCabecalho">
                            <div class="col-sm-auto">
                                <div class="content-header">@ViewBag.Title</div>
                            </div>
                            <div class="caixaTituloBotao">
                                <button id="cmdSalvar" type="button" class="btn btn-raised btn-outline-success mb-1">
                                    <span class="ft-save" style="font-size:1.8em;"></span>
                                </button>
                                <button id="btnSair" type="button" class="btn btn-raised btn-outline-danger mb-1">
                                    <span class="fa fa-sign-out-alt" style="font-size:1.8em;"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card mt-0 mb-1">
                        <div class="card-content">
                            <div class="card-body pt-2 pb-2">
                                <form class="form mb-0" name="formGrupoUsuario" id="formGrupoUsuario" method="post" accept-charset="UTF-8">
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <!--Ativar Grupo----->
                                                <!--Descricao Grupo----->
                                                <div class="form-group mb-2">
                                                    <label for="txtDescricao">Descrição</label>
                                                    <div class="controls position-relative has-icon-left ">
                                                        <input id="txtDescricao" name="txtDescricao" minlength="2" maxlength="100" type="text" placeholder="Descrição" class="form-control" required>
                                                        <div class="form-control-position iconeInput">
                                                            <i class="fas fa-users"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="custom-control custom-switch">
                                                    <input type="checkbox" class="custom-control-input" id="cbxGPermission" name="cbxPermission">
                                                    <label class="custom-control-label" for="cbxGPermission">
                                                        Permissão Geral
                                                    </label>
                                                </div>
                                                <div class="custom-control custom-switch">
                                                    <input type="checkbox" class="custom-control-input" id="cbxOPermission" name="cbxOPermission">
                                                    <label class="custom-control-label" for="cbxOPermission">
                                                        Só Visualizar
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section css {


}

@section scripts {
    <script src="@Url.Fingerprint("~/Scripts/Componentes/checkBo.min.js")" type="text/javascript"></script>
    <script src="@Url.Fingerprint("~/Scripts/Componentes/Validation/jqBootstrapValidation.js")" type="text/javascript" charset="utf-8"></script>
    <script src="@Url.Fingerprint("~/Scripts/Tela/Geral/Utilitario.js")" type="text/javascript"></script>
    <script src="@Url.Fingerprint("~/Scripts/Tela/Cadastro/GrupoUsuario/CadastroGrupoUsuario.js")" type="text/javascript"></script>

    <script>
        root = "http://@HttpContext.Current.Request.Url.Authority";
        var model = @Html.Raw(Json.Encode(Model));
    </script>
}