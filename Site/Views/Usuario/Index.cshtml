
@{
    ViewBag.Title = "Usuário";
}
<input type="hidden" class="hidden" name="inpPermissao" id="txtPermissao" value="@ViewBag.UsuarioEdita">
<div class="main-content">
    <div class="content-wrapper">
        <!---Inicio Painel-->
        <div class="basic-elements">
            <div class="col-md-12">
                <div class="card mt-0 mb-1">
                    <div class="card-content">
                        <div class="card-body pt-2 pb-0">
                            <div class="row caixaTitulo" id="linhaCabecalho">
                                <div class="col-sm-auto">
                                    <div class="content-header">@ViewBag.Title</div>
                                </div>
                                <div class="caixaTituloBotao">
                                    <!--Btn add Modal-->
                                    <button type="button" id="cmdAdicionar" class="btnModal btn btn-raised btn-outline-info mr-1">
                                        <span class="ft-plus"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body table-responsive">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="col-xs-2 w40" style="float:right;">
                                                <div class="input-group">
                                                    <input id="search" type="text" placeholder="Pesquisar" class="form-control">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 divTabSistema">
                                            <table id="tabelaDados" class="table table-striped table-bordered tbSistema" style="width:100%"></table>

                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!---/Pesquisar------>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>

    </div>
    @section css{
        <link href="@Url.Content("~/Content/Componentes/datatables/dataTables.bootstrap4.css")" rel="stylesheet" />

    }

    @section scripts{

        <script src="@Url.Content("~/Scripts/Componentes/datatables/datatables.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/Componentes/datatables/dataTables.responsive.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/Componentes/datatables/sorting/custom-data-source/doms.js")" type="text/javascript"></script>

        <script src="@Url.Content("~/Scripts/Tela/Geral/Utilitario.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/Tela/Geral/Extensao.js")" type="text/javascript"></script>

        <script src="@Url.Content("~/Scripts/Tela/Cadastro/Usuario/ListaUsuario.js")" type="text/javascript"></script>
        <script>
        //var root = "http://@HttpContext.Current.Request.Url.Authority";
        </script>

    }




