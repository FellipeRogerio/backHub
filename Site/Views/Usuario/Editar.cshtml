
@{
    ViewBag.Title = "Usuário";
}
<input type="hidden" class="hidden" name="inpPermissao" id="txtPermissao" value="@ViewBag.UsuarioEdita">
<input type="hidden" class="hidden" name="inpCodigo" id="txtCodigo" value="@Model.Id">
<div class="main-content">
    <div class="content-wrapper">
        <!---Inicio Painel-->
        <div class="basic-elements">
            <div class="card mt-0 mb-1">
                <div class="card-content">
                    <div class="card-body pt-2 pb-0">
                        <div class="row caixaTitulo" id="linhaCabecalho">
                            <div class="col-sm-auto">
                                <div class="content-header">@ViewBag.Title</div>
                            </div>
                            <div class="caixaTituloBotao">
                                <button id="cmdSalvar" type="button" class="btn btn-raised btn-outline-success mb-1">
                                    <span class="ft-save" style="font-size:1.8em;"></span>
                                </button>
                                <button id="btnSair" type="button" class="btn btn-raised btn-outline-danger mb-1">
                                    <span class="fa fa-sign-out-alt" style="font-size:1.8em;"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card mt-0 mb-1">
                        <div class="card-content">
                            <div class="card-body pt-2 pb-2">
                                <form class="form mb-0" name="formUsuario" id="formUsuario" method="post" accept-charset="UTF-8">
                                    <div class="form-body">
                                        @*<h4 class="form-section"><i class="fas fa-users"></i> @ViewBag.Title</h4>*@
                                        <div class="row justify-content-end">
                                            <div class="col-auto">
                                                <div class="custom-control custom-switch">
                                                    <input type="checkbox" class="custom-control-input" id="chkAtivo" name="chkAtivo">
                                                    <label class="custom-control-label" for="chkAtivo">
                                                        Ativo
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">

                                                <!--Ativar Grupo----->
                                                <!--Descricao Grupo----->
                                                <div class="form-group mb-2">
                                                    <label for="txtNome">Nome</label>
                                                    <div class="controls mb-1 position-relative has-icon-left ">

                                                        <input id="txtNome" name="txtNome" minlength="2" maxlength="100" type="text" placeholder="" class="form-control" required>
                                                        <div class="form-control-position ">
                                                            <i class="ft-type"></i>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">

                                                <!--Ativar Grupo----->
                                                <!--Descricao Grupo----->
                                                <div class="form-group mb-2">
                                                    <label for="txtUsuario">Usuário</label>
                                                    <div class="controls mb-1 position-relative has-icon-left ">
                                                        <input id="txtUsuario" name="txtUsuario" maxlength="100" type="text" placeholder="" class="form-control" required>
                                                        <div class="form-control-position ">
                                                            <i class="ft-user"></i>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-12">

                                                <!--Ativar Grupo----->
                                                <!--Descricao Grupo----->
                                                <div class="form-group mb-2">
                                                    <label for="txtEmail">Email</label>
                                                    <div class="controls mb-1 position-relative has-icon-left ">
                                                        <input id="txtEmail" name="txtEmail" maxlength="100" type="email" placeholder="" class="form-control" required>
                                                        <div class="form-control-position ">
                                                            <i class="ft-at-sign"></i>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-6">

                                                <!--Ativar Grupo----->
                                                <!--Descricao Grupo----->
                                                <div class="form-group mb-2">
                                                    <label for="txtSenha">Senha</label>
                                                    <div class="controls mb-1 position-relative has-icon-left ">
                                                        <input id="txtSenha" name="txtSenha" minlength="6" maxlength="20" type="password" class="form-control" required>
                                                        <div class="form-control-position ">
                                                            <i class="ft-lock"></i>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">

                                                <!--Ativar Grupo----->
                                                <!--Descricao Grupo----->
                                                <div class="form-group mb-2">
                                                    <label for="txtConfirmarSenha">Confirmar Senha</label>
                                                    <div class="controls mb-1 position-relative has-icon-left ">
                                                        <input id="txtConfirmarSenha" name="txtConfirmarSenha" data-validation-match-match="txtSenha" type="password" class="form-control">
                                                        <div class="form-control-position ">
                                                            <i class="ft-lock"></i>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>




                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">

                                                <!--Ativar Grupo----->
                                                <!--Descricao Grupo----->
                                                <div class="form-group mb-2">
                                                    <label for="cmbGrupoUsuario">Grupo de Usuário</label>
                                                    <div class="controls mb-1 position-relative has-icon-left ">
                                                        <select id="cmbGrupoUsuario" class="form-control ComboEditavel" required="required"></select>
                                                        <div class="form-control-position ">
                                                            <i class="fas fa-users"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                      
                                    </div>
                                </form>

                            </div>
                        </div>
                        <!---/Pesquisar------>
                    </div>

                </div>


            </div>
        </div>
    </div>
</div>


